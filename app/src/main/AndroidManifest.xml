<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.COMP2000HK_CW">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.COMP2000HK_CW">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GuestMainActivity" tools:ignore="Instantiatable" />
        <activity android:name=".GuestMenuActivity" tools:ignore="Instantiatable" />
        <activity android:name=".GuestReserveActivity" tools:ignore="Instantiatable" />
        <activity android:name=".GuestReservationActivity" tools:ignore="Instantiatable" />
        <activity android:name=".GuestSettingActivity" tools:ignore="Instantiatable" />
        <activity android:name=".GuestCreateAccountActivity" tools:ignore="Instantiatable" />
        <activity android:name=".StaffMainActivity" tools:ignore="Instantiatable" />
        <activity android:name=".StaffMenuActivity" tools:ignore="Instantiatable" />
        <activity android:name=".StaffReservationActivity" tools:ignore="Instantiatable" />
        <activity android:name=".StaffSettingActivity" tools:ignore="Instantiatable" />
    </application>

</manifest>